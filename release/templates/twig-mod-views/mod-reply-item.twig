<DIV id="{{ field.ID }}" class="form-group">
  <H2>{{ field.Label }}</H2>
  <P>{{ field.Description }}</P>
  {% for respondable in field.Respondables %}
  <DIV id="{{respondable.Object.Field.Name}}" class="respondable-group  {{ respondable.GetType() }}">
    {% if respondable.GetType() == "textarea" %}
      <LABEL> {% if respondable.Object.Field.Label != "" %} {{respondable.Object.Field.Label}}<br/> {% endif %}
      <TEXTAREA class="readonly-input" onclick="return false" readonly data-name="{{respondable.Object.Field.Name}}" required="{{ respondable.Object.Field.Required ? "true" : "false" }}" placeholder="{{respondable.Object.Placeholder}}">
{{ reply[respondable.Object.Field.Name] }}
      </TEXTAREA> </LABEL>
    {% elseif respondable.GetType() == "genericinput" %}
      <LABEL> {% if respondable.Object.Field.Label != "" %} {{respondable.Object.Field.Label}}<br/> {% endif %}
      <INPUT value="{{ reply[respondable.Object.Field.Name] }}" class="readonly-input" onclick="return false" readonly data-name="{{respondable.Object.Field.Name}}" {% if respondable.Object.Field.Required %}required="true"{% endif %} placeholder="{{respondable.Object.Placeholder}}" type="{{respondable.Object.GetInputType()}}" /> </LABEL>
    {% elseif respondable.GetType() == "fileinput" %}
      <LABEL> {% if respondable.Object.Field.Label != "" %}  {{respondable.Object.Field.Label}}<br/> {% endif %}
      Download: <A href="/mod/files/{{ storagename }}/{{ reply.Identifier }}/{{reply[respondable.Object.Field.Name]}}" class="user-file" data-name="{{respondable.Object.Field.Name}}">{{reply[respondable.Object.Field.Name]}}</A> </LABEL>
    {% elseif respondable.GetType() == "selectiongroup" %}
        <P>{{respondable.Object.Field.Label}}</P>
        {% for check in respondable.Object.CheckableItems %}
          {% set chkname = respondable.Object.Field.Name ~ ((respondable.Object.GetCategory() == "checkbox") ? ("-" ~ loop.index) : "" ) %}
          <LABEL>{{ check.Label }}<INPUT class="readonly-input" onclick="return false" readonly
            {% if reply[chkname] == check.Value %} checked {% endif %}
            type="{{ respondable.Object.GetCategory() }}" data-required="{{ respondable.Object.Field.Required ? "true" : "false" }}"
            data-name="{{respondable.Object.Field.Name}}{% if respondable.Object.GetCategory() == "checkbox" %}-{{ loop.index }}{% endif %}"
            value="{{check.Value}}"
          /></LABEL>
        {% endfor %}
    {% elseif respondable.GetType() == "optiongroup" %}
        <LABEL> {% if respondable.Object.Field.Label != "" %} {{respondable.Object.Field.Label}}<br/> {% endif %}
        <SELECT value="{{ reply[respondable.Object.Field.Name] }}" class="readonly-input" onclick="return false" readonly data-name="{{respondable.Object.Field.Name}}" required="{{ respondable.Object.Field.Required ? "true" : "false" }}" >
          {% for opt in respondable.Object.Options %}
            <OPTION value="{{opt.Value}}" {% if reply[respondable.Object.Field.Name] == opt.Value %} selected="1" {% endif %}>{{ opt.Label }}</OPTION>
          {% endfor %}
        </SELECT>
      </LABEL>
    {% endif %}
    </DIV>
    </br>
  {% endfor %}

  {% for group in field.FormFields %}
    {% include 'mod-views/mod-reply-item.twig' with {'field':group , 'reply':reply} %}
  {% endfor %}
</DIV>
